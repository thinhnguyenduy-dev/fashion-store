# Fashion Store Microservices - Environment Configuration
# Copy this to .env and fill in your values

# ============================================
# Node Environment
# ============================================
NODE_ENV=development

# ============================================
# Database URLs (PostgreSQL)
# Each service has its own database
# ============================================
IDENTITY_DATABASE_URL=postgresql://admin:admin123@localhost:5432/identity_db?schema=public
CATALOG_DATABASE_URL=postgresql://admin:admin123@localhost:5432/catalog_db?schema=public
INVENTORY_DATABASE_URL=postgresql://admin:admin123@localhost:5432/inventory_db?schema=public
ORDER_DATABASE_URL=postgresql://admin:admin123@localhost:5432/order_db?schema=public
PAYMENT_DATABASE_URL=postgresql://admin:admin123@localhost:5432/payment_db?schema=public
NOTIFICATION_DATABASE_URL=postgresql://admin:admin123@localhost:5432/notification_db?schema=public
CART_DATABASE_URL=postgresql://admin:admin123@localhost:5432/cart_db?schema=public

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_URL=amqp://admin:admin123@localhost:5672
RABBITMQ_PREFETCH=10

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# ============================================
# Keycloak Configuration
# ============================================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=fashion-store
KEYCLOAK_CLIENT_ID=api-gateway
KEYCLOAK_CLIENT_SECRET=your-client-secret

# ============================================
# Elasticsearch Configuration
# ============================================
ELASTICSEARCH_URL=http://localhost:9200

# ============================================
# Service Ports
# ============================================
API_GATEWAY_PORT=3000
IDENTITY_SERVICE_PORT=3001
CATALOG_SERVICE_PORT=3002
INVENTORY_SERVICE_PORT=3003
ORDER_SERVICE_PORT=3004
PAYMENT_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006
CART_SERVICE_PORT=3007

# ============================================
# gRPC Ports
# ============================================
IDENTITY_GRPC_PORT=50051
CATALOG_GRPC_PORT=50052
INVENTORY_GRPC_PORT=50053
ORDER_GRPC_PORT=50054
PAYMENT_GRPC_PORT=50055
CART_GRPC_PORT=50056

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=1h

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug
